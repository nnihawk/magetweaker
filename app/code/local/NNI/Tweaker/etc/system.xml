<?xml version="1.0"?>
<config>
    <tabs>
        <nni translate="label" module="nni_tweaker">
            <label>NNI-Tools</label>
            <sort_order>500</sort_order>
        </nni>
    </tabs>
    <sections>
        <nni_tweaker>
            <label><![CDATA[<img style="display:inline-block;margin-right: 5px;" src="/skin//adminhtml/default/default/images/grouped_to_order_icon.png"><div style="padding: 0;display:inline-block;position:absolute">Tweaker</div>]]></label>
            <tab>nni</tab>
            <class>nni_tweak</class>
            <frontend_type>text</frontend_type>
            <sort_order>10000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <information>
                    <label translate="label">About</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>5</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <about translate="label" module="paypal">
                            <frontend_model>nni_tweaker/adminhtml_system_config_fieldset_hint</frontend_model>
                            <help_link>https://hawks-moviedb.de</help_link>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </about>
                    </fields>
                </information>
                <general_settings>
                    <label translate="label">General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>5</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <show_attribute_codes translate="label, comment">
                            <label>Show attribute-codes</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Shows also attribute-code under attribute-label. Regards to products, categories, system-config</comment>
                        </show_attribute_codes>
                        <cms_page_allow_import_export translate="label, comment">
                            <label>Allow import/export of cms-pages</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </cms_page_allow_import_export>
                        <allow_order_email_change translate="label, comment">
                            <label>Allow to change email of orders</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </allow_order_email_change>
                        <show_hidden_attributes translate="label, comment">
                            <label>Show hidden attributes in attribute-manager</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[Show also hidden attribute in attribute-manager.<br> <strong style="color:red">Be careful!!!</strong>]]></comment>
                        </show_hidden_attributes>
                    </fields>
                </general_settings>
                <product_settings>
                    <label translate="label">Products</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <show_open_in_frontend translate="label, comment">
                            <label>Show 'Open in frontend' button on product edit-page</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Shows a button for opening product in frontend for current storeview</comment>
                        </show_open_in_frontend>
                    </fields>
                </product_settings>
                <!--
                <category_settings>
                    <label translate="label">Categories</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>

                </category_settings>
                -->
            </groups>
        </nni_tweaker>
    </sections>
</config>